<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gray_round_rect_diff"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.mindbowser.choicehealthcare.activities.DashboardActivity" >

    <com.mindbowser.choicehealthcare.views.MBTextView
        android:id="@+id/row_dashboard_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:padding="5dip"
        android:text="@string/title"
        android:textAllCaps="true"
        android:textColor="@color/dark_default_gray"
        android:textSize="@dimen/size_title"
        android:textStyle="bold"
        custom:customFont="@string/font_open_sans_semi_bold" />

    <ImageView
        android:id="@+id/row_dashboard_iv_article"
        android:layout_width="wrap_content"
        android:layout_height="150dip"
        android:layout_marginTop="10dip"
        android:contentDescription="@string/read_article"
        android:src="@drawable/ic_launcher" />

    <com.mindbowser.choicehealthcare.views.MBTextView
        android:id="@+id/row_dashboard_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:text="@string/subtitle"
        android:textColor="@color/dark_default_gray"
        android:textSize="@dimen/size_subtitle"
        android:textStyle="bold"
        custom:customFont="@string/font_open_sans_semi_bold" />

    <com.mindbowser.choicehealthcare.views.MBTextView
        android:id="@+id/row_dashboard_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:padding="5dip"
        android:text="@string/description"
        android:textColor="@color/dark_default_gray"
        android:textSize="@dimen/size_description"
        android:textStyle="bold"
        custom:customFont="@string/font_open_sans_regular" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_margin="3dip"
        android:layout_marginTop="30dip"
        android:background="@color/gray" />

    <com.mindbowser.choicehealthcare.views.MBTextView
        android:id="@+id/row_dashboard_tv_bottom_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginTop="8dip"
        android:gravity="center"
        android:text="@string/title"
        android:textAllCaps="true"
        android:textColor="@color/cp_dark_blue_shade"
        android:textSize="@dimen/size_description"
        android:textStyle="bold"
        custom:customFont="@string/font_open_sans_regular" />

</LinearLayout>