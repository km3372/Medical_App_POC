<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:background="@drawable/layout_appoinment_border" >

    <TableRow
        android:id="@+id/tr_row_medication"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_row_medication_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:paddingRight="5dip"
            android:text="@string/subtitle"
            android:textColor="@color/cp_red"
            android:textSize="@dimen/size_subtitle" />

        <ImageView
            android:id="@+id/iv_row_medication_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_forward" />
    </TableRow>

</RelativeLayout>