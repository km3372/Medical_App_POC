<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_relative_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageButton
        android:id="@+id/ib_action_bar_slid_menu"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:scaleType="fitXY"
        android:background="@null"
        android:paddingBottom="5dp"
        android:src="@drawable/ic_drawer" />

    <ImageView
        android:layout_width="120dip"
        android:layout_height="80dip"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:layout_alignParentBottom="true"
        android:background="@color/cp_sky_blue" />

    <TextView
        android:id="@+id/tv_action_bar_choice_points"
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/cp_red"
        android:textSize="@dimen/text_size_choice_points" />

</RelativeLayout>