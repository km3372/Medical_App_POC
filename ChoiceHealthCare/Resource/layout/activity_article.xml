<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.mindbowser.choicehealthcare.activities.DashboardActivity" >

    <RelativeLayout
        android:id="@+id/activity_article_relative_header"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@color/white" >

        <ImageButton
            android:id="@+id/activity_article_btn_slid_menu"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@null"
            android:paddingBottom="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_drawer" />

        <ImageView
            android:layout_width="120dip"
            android:layout_height="80dip"
            android:layout_centerInParent="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tv_activiy_article_choice_points"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/cp_red"
            android:textSize="@dimen/text_size_choice_points" />
    </RelativeLayout>

    <WebView
        android:id="@+id/activity_article_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_article_relative_header" />

</RelativeLayout>